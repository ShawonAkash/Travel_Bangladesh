<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.akashahmed.travel_bangladesh.ChittagongActivity"
    android:orientation="vertical"
    android:background="#d8eaec">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tourist spot in Chittagong"
            android:textColor="#66586C"
            android:background="#FFFFFF"
            android:textSize="30sp"
            android:layout_marginTop="20dp"
            android:paddingLeft="10dp"
            android:paddingBottom="20dp"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Coxbazar"
            android:textColor="#FFFFFF"
            android:background="#172629"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:paddingTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imageviewid"
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/coxbazar"/>
            <TextView
                android:id="@+id/textviewid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="CoxBazar beach"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/inani"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Inani Beach"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/saintmartin"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Saint Martin Island"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/himchori"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Himchori"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/feetbuddha"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100 feet Buddha"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/kanaraja"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Kana raja Cave"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Bandarban"
            android:textColor="#FFFFFF"
            android:background="#172629"
            android:textSize="30sp"
            android:layout_marginTop="30dp"
            android:paddingLeft="20dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="left"
            android:paddingTop="5dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/nilachol"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Nilachal"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="100dp"
                android:layout_height="70dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="5dp"
                android:src="@drawable/buddhadhatu"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Budda Dhatu Jadi"
                android:textColor="#E7DDEA"
                android:background="#1C2331"
                android:textSize="24sp"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"/>
        </LinearLayout>


    </LinearLayout>

</ScrollView>
